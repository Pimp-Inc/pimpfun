{
  "name": "pimpfun-empire-city",
  "version": "1.0.0",
  "description": "PIMP.FUN Empire City - A text-based strategy game set in NYC",
  "main": "index.html",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/ tests/",
    "dev": "live-server --port=3000",
    "start": "live-server --port=3000"
  },
  "keywords": ["game", "strategy", "web", "javascript", "pimp", "empire"],
  "author": "Pimp Inc",
  "license": "MIT",
  "devDependencies": {
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "@types/jest": "^29.5.7",
    "eslint": "^8.52.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "collectCoverageFrom": [
      "src/**/*.js",
      "*.js",
      "!node_modules/**",
      "!tests/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html"]
  }
}